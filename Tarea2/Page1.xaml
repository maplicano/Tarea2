<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="¡Bienvenido a la segunda página!" HorizontalOptions="Center" FontSize="Title" />
            <Label Text="{Binding Nombre}" HorizontalOptions="Center" FontSize="Title" />
            <Label Text="{Binding Apellido}" HorizontalOptions="Center" FontSize="Title" />
            <Label Text="{Binding Edad}" HorizontalOptions="Center" FontSize="Title" />
            <Label Text="{Binding Correo}" HorizontalOptions="Center" FontSize="Title" />
                
      </StackLayout>
    </ContentPage.Content>
</ContentPage>